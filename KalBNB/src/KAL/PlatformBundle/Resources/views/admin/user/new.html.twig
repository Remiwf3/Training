{% extends '@KALPlatform/base.html.twig' %}

{% block title %}Admin - New User{% endblock %}

{# {% form_theme form _self %} #}

{% block body %}

    <div class="container">
        <h1>Créer un nouvel utilisateur</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
            </div>
            <div class="col">
                {{ form_row(form.email) }}
                {{ form_row(form.hash) }}
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Créer un nouvel utilisateur</button>

        {{ form_end(form) }}

        
    </div>

{% endblock %}
